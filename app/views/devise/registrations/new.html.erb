<div class="max-w-md mx-auto bg-[#1F2937] shadow-lg rounded-lg px-8 pt-6 pb-8 mb-4">
  <h2 class="text-2xl font-bold text-center text-white mb-6">Criar Conta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :name, "Nome", class: "block text-slate-300 text-sm font-bold mb-2" %>
      <%= f.text_field :name, class: "mt-1 block w-full bg-[#111827] border-slate-600 rounded-md shadow-sm focus:border-[#4f46e5] focus:ring focus:ring-[#4f46e5] focus:ring-opacity-50 text-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-slate-300 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full bg-[#111827] border-slate-600 rounded-md shadow-sm focus:border-[#4f46e5] focus:ring focus:ring-[#4f46e5] focus:ring-opacity-50 text-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, "Senha", class: "block text-slate-300 text-sm font-bold mb-2" %>
      <% if @minimum_password_length %>
      <em class="text-slate-500">(<%= @minimum_password_length %> caracteres no mínimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full bg-[#111827] border-slate-600 rounded-md shadow-sm focus:border-[#4f46e5] focus:ring focus:ring-[#4f46e5] focus:ring-opacity-50 text-white" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, "Confirmação da Senha", class: "block text-slate-300 text-sm font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full bg-[#111827] border-slate-600 rounded-md shadow-sm focus:border-[#4f46e5] focus:ring focus:ring-[#4f46e5] focus:ring-opacity-50 text-white" %>
    </div>

    <div class="actions">
      <%= f.submit "Cadastrar", class: "w-full bg-[#4f46e5] hover:bg-[#4338ca] text-white font-bold py-2 px-4 rounded-lg cursor-pointer transition-colors" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>
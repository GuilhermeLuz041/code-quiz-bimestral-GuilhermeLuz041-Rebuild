<div class="max-w-2xl mx-auto bg-[#1F2937] shadow-lg rounded-lg p-8">
  <div class="mb-6 border-b border-slate-700 pb-4">
    <h1 class="text-2xl font-bold text-white"><%= @questionnaire.title %></h1>
    <p class="text-sm text-slate-400">Pergunta <%= @questionnaire.questions.order(:created_at).index(@question) + 1 %> de <%= @questionnaire.questions.count %></p>
  </div>

  <h2 class="text-xl font-semibold text-slate-300 mb-6"><%= @question.enunciation %></h2>

  <% if flash[:alert] %>
    <p class="bg-red-900 border border-red-700 text-red-200 px-4 py-3 rounded relative mb-4" role="alert"><%= flash[:alert] %></p>
  <% end %>

  <%= form_with(url: questionnaire_submit_quiz_answer_path(@questionnaire, @question), method: :post, class: "space-y-4") do |form| %>
    <% @question.question_options.order(:created_at).each do |option| %>
      <label for="selected_option_id_<%= option.id %>" class="flex items-center p-4 border border-slate-700 rounded-lg hover:bg-slate-800 transition-colors cursor-pointer has-[:checked]:bg-[#4f46e5] has-[:checked]:border-[#4338ca]">
        <%= form.radio_button :selected_option_id, option.id, class: "hidden" %>
        <span class="ml-3 block text-md font-medium text-slate-300"><%= option.title %></span>
      </label>
    <% end %>

    <div class="pt-6">
      <%= form.submit "Confirmar e PrÃ³xima", class: "w-full bg-[#4f46e5] hover:bg-[#4338ca] text-white font-bold py-3 px-4 rounded-lg cursor-pointer transition-transform transform hover:scale-[1.01]" %>
    </div>
  <% end %>
</div>
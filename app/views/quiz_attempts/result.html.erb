<div class="max-w-2xl mx-auto bg-[#1F2937] shadow-lg rounded-lg p-8 text-center">
  <h1 class="text-3xl font-bold text-white mb-4">Resultado do Quiz</h1>
  <h2 class="text-xl text-slate-400 mb-8"><%= @user_result.questionnaire.title %></h2>

  <div class="mb-8">
    <p class="text-lg text-slate-300">Você acertou</p>
    <p class="text-6xl font-bold text-white">
      <%= @user_result.correct_answers %> de <%= @user_result.total_questions %>
    </p>
    <p class="text-lg text-slate-300">perguntas</p>
  </div>

  <div class="bg-[#4f46e5] text-white rounded-lg p-4 mb-8">
    <p class="text-lg">Sua pontuação final foi de</p>
    <p class="text-4xl font-bold"><%= number_to_percentage(@user_result.score, precision: 0) %></p>
  </div>

  <div class="mt-8">
    <%= link_to "Ver outros Questionários", questionnaires_path, class: "text-slate-400 hover:text-white" %>
  </div>
</div>
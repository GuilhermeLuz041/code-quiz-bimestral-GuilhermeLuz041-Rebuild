<%# Lista de Usuários %>
<div class="max-w-4xl mx-auto">
  <div class="bg-[#1F2937] shadow-lg rounded-lg p-8">
    <h1 class="text-3xl font-bold text-white mb-8">Gerenciar Usuários</h1>

    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="border-b border-slate-700">
            <th class="text-left p-4 text-slate-400">Email</th>
            <th class="text-left p-4 text-slate-400">Funções</th>
            <th class="text-right p-4 text-slate-400">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr class="border-b border-slate-700 hover:bg-slate-800">
              <td class="p-4 text-white"><%= user.email %></td>
              <td class="p-4">
                <div class="flex flex-wrap gap-2">
                  <% user.roles.each do |role| %>
                    <span class="px-2 py-1 text-xs rounded-full
                      <%= role.title == 'admin' ? 'bg-red-900/50 text-red-300' :
                          role.title == 'moderator' ? 'bg-blue-900/50 text-blue-300' :
                          'bg-slate-700 text-slate-300' %>">
                      <%= role.title.capitalize %>
                    </span>
                  <% end %>
                </div>
              </td>
              <td class="p-4 text-right">
                <% if user != current_user && !user.admin? %>
                  <% if user.moderator? %>
                    <%= button_to demote_user_path(user), method: :patch,
                        class: "inline-flex items-center px-3 py-2 text-sm font-medium text-red-400 hover:text-red-300 bg-red-900/30 hover:bg-red-900/50 rounded transition-colors",
                        data: { turbo_confirm: "Tem certeza que deseja rebaixar este moderador?" } do %>
                      <i class="fas fa-level-down-alt mr-2"></i>
                      Rebaixar
                    <% end %>
                  <% else %>
                    <%= button_to promote_user_path(user), method: :patch,
                        class: "inline-flex items-center px-3 py-2 text-sm font-medium text-emerald-400 hover:text-emerald-300 bg-emerald-900/30 hover:bg-emerald-900/50 rounded transition-colors" do %>
                      <i class="fas fa-level-up-alt mr-2"></i>
                      Promover
                    <% end %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="w-full max-w-3xl mx-auto">
  <div class="bg-[#1F2937] shadow-lg rounded-lg p-8 mb-8">
    <%# --- Detalhes do Questionário --- %>
    <h1 class="text-3xl font-bold text-white mb-2"><%= @questionnaire.title %></h1>
    <p class="text-slate-400 mb-6"><%= @questionnaire.description %></p>
    <div class="flex items-center space-x-6 text-sm text-slate-500 mb-8">
      <span>Criado por: <%= @questionnaire.user.email %></span>
      <span>|</span>
      <span>Perguntas: <%= @questionnaire.questions.count %></span>
      <span>|</span>
      <span>Duração: <%= @questionnaire.duration_minutes %> minutos</span>
      <% if @questionnaire.code.present? %>
        <span>|</span>
        <span>Código: <%= @questionnaire.code %></span>
      <% end %>
    </div>

    <% if @questionnaire.questions.any? %>
      <%# A verificação 'user_signed_in?' foi removida daqui %>
      <%= link_to "Iniciar Quiz", questionnaire_quiz_question_path(@questionnaire, @questionnaire.questions.order(:created_at).first), class: "w-full text-center block bg-[#4f46e5] hover:bg-[#4338ca] text-white font-bold py-3 px-4 rounded-lg text-lg transition-colors" %>
    <% else %>
      <p class="text-slate-500 text-center">Este questionário ainda não tem perguntas disponíveis.</p>
    <% end %>
  </div>

  <% if policy(@questionnaire).edit? %>
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-white mb-4">Gerenciamento</h2>
      <div class="flex justify-between items-center mb-6">
        <h3 class="text-xl text-slate-300">Perguntas</h3>
        <%= link_to "Adicionar Pergunta", new_questionnaire_question_path(@questionnaire), class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg transition-colors" %>
      </div>

      <div id="questions" class="space-y-4">
        <% @questionnaire.questions.each do |question| %>
          <div class="bg-[#1F2937] p-4 rounded-lg shadow flex justify-between items-center">
            <p class="text-slate-300"><%= question.enunciation %></p>
            <%= link_to "Gerenciar", [@questionnaire, question], class: "text-sm text-slate-400 hover:text-white" %>
          </div>
        <% end %>
        <% if @questionnaire.questions.empty? %>
          <p class="text-slate-500">Ainda não há perguntas neste questionário.</p>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="mt-8 text-center">
    <%= link_to "Voltar para a lista", questionnaires_path, class: "text-slate-400 hover:text-white" %>
  </div>
</div>
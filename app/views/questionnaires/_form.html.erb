<%= form_with(model: questionnaire, class: "space-y-6") do |form| %>
  <% if questionnaire.errors.any? %>
    <div class="text-red-400 p-4 border border-red-800 bg-red-900/20 rounded-lg">
      <h2 class="font-bold"><%= pluralize(questionnaire.errors.count, "erro") %> impediu este questionário de ser salvo:</h2>
      <ul class="list-disc list-inside mt-2">
        <% questionnaire.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="border-b border-slate-700 pb-6">
    <%= form.label :title, "Título do Questionário", class: "block text-sm font-medium text-slate-300" %>
    <%= form.text_field :title, class: "mt-1 block w-full bg-[#1F2937] border-slate-600 rounded-md shadow-sm focus:border-[#4f46e5] focus:ring focus:ring-[#4f46e5] focus:ring-opacity-50 text-white" %>
  </div>

  <div class="border-b border-slate-700 pb-6">
    <%= form.label :description, "Descrição", class: "block text-sm font-medium text-slate-300" %>
    <%= form.text_area :description, rows: 5, class: "mt-1 block w-full bg-[#1F2937] border-slate-600 rounded-md shadow-sm focus:border-[#4f46e5] focus:ring focus:ring-[#4f46e5] focus:ring-opacity-50 text-white" %>
  </div>

  <div class="grid grid-cols-2 gap-4 border-b border-slate-700 pb-6">
    <div>
      <%= form.label :code, "Código Único (opcional)", class: "block text-sm font-medium text-slate-300" %>
      <%= form.text_field :code, class: "mt-1 block w-full bg-[#1F2937] border-slate-600 rounded-md shadow-sm focus:border-[#4f46e5] focus:ring focus:ring-[#4f46e5] focus:ring-opacity-50 text-white" %>
    </div>
    <div>
      <%= form.label :duration_minutes, "Duração (em minutos)", class: "block text-sm font-medium text-slate-300" %>
      <%= form.number_field :duration_minutes, class: "mt-1 block w-full bg-[#1F2937] border-slate-600 rounded-md shadow-sm focus:border-[#4f46e5] focus:ring focus:ring-[#4f46e5] focus:ring-opacity-50 text-white" %>
    </div>
  </div>

  <div class="flex items-center space-x-4 pt-4">
    <%= form.submit "Salvar Questionário", class: "bg-[#4f46e5] hover:bg-[#4338ca] text-white font-bold py-2 px-4 rounded-lg cursor-pointer transition-colors" %>
    <%= link_to "Cancelar", questionnaires_path, class: "text-slate-400 hover:text-white" %>
  </div>
<% end %>
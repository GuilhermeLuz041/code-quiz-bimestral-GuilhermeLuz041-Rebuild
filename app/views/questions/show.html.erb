<div class="w-full">
  <div class="bg-[#1F2937] shadow-lg rounded-lg p-8 mb-8">
    <h1 class="text-2xl font-bold text-white mb-2">Gerenciar Pergunta</h1>
    <p class="text-slate-300 text-lg"><%= @question.enunciation %></p>
  </div>

  <h2 class="text-xl font-semibold mb-4 text-white">Opções de Resposta</h2>
  <div id="question_options" class="space-y-4">
    <% @question.question_options.each do |option| %>
      <div class="p-4 bg-[#1F2937] border border-slate-700 rounded-lg flex justify-between items-center <%= 'bg-green-900/50 border-green-700' if option.is_correct? %>">
        <span class="text-slate-300"><%= option.title %></span>
        <% if option.is_correct? %>
          <span class="text-green-400 font-bold text-sm">Correta</span>
        <% end %>
      </div>
    <% end %>
    <% if @question.question_options.empty? %>
      <p class="text-slate-500">As opções de resposta foram criadas junto com a pergunta.</p>
      <p class="text-slate-500">Para adicionar ou remover opções, edite a pergunta.</p>
    <% end %>
  </div>

  <hr class="my-6 border-slate-700">

  <div class="flex items-center space-x-4">
    <%= link_to "Voltar para o Questionário", questionnaire_path(@question.questionnaire), class: "text-slate-400 hover:text-white" %>
    <% if policy(@question).edit? %>
      <%= link_to "Editar Pergunta e Opções", edit_questionnaire_question_path(@questionnaire, @question), class: "bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-3 rounded text-sm transition-colors" %>
    <% end %>
    <% if policy(@question).destroy? %>
      <%= button_to "Destruir Pergunta", [@questionnaire, @question], method: :delete, class: "bg-red-700 hover:bg-red-800 text-white font-bold py-2 px-3 rounded text-sm transition-colors", form: { data: { turbo_confirm: 'Você tem certeza?' } } %>
    <% end %>
  </div>
</div>